<style>
  .logo {
    text-decoration: none;
    padding: 1rem;
  }
  div {
    display: flex;
    justify-content: space-between;
  }
  nav ul {
    display: flex;
    justify-content: center;
    justify-content: end;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    margin-top: 2rem;
  }

  li {
    margin: 0 10px;
    display: inline;
  }

  #menu a {
    color: #b34e17;
    text-decoration: none;
  }

  #menu a {
    background-color: #f9df90;
    border: none;

    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    padding: 0.51rem 2rem 0.5rem 2rem;
    color: #b34e17;
    border-radius: 25px;
    min-width: 100px;
  }

  #menu a:hover {
    background-color: #fff0c1;
  }

  #burger-menu {
    text-indent: -9999px;
    display: none;
    border: none;
    background: transparent;
    margin: 25px;
    cursor: pointer;
    height: 27px;
    width: 27px;
    position: relative;
    z-index: 2;
  }

  @media screen and (max-width: 900px) {
    .logo {
      text-decoration: none;
      padding: ;
    }
    #menu ul {
      display: block;
    }
    #burger-menu {
      display: block;
    }
    #burger-menu span,
    #burger-menu span:before,
    #burger-menu span:after {
      background: #f9df90;
      display: block;
      height: 3px;
      opacity: 1;
      position: absolute;
      transition: 0.3s ease-in-out;
      content: "";
    }
    #burger-menu span:before {
      left: 0px;
      top: -10px;
      width: 27px;
    }
    #burger-menu span {
      right: 0px;
      top: 13px;
      width: 27px;
    }
    #burger-menu span:after {
      left: 0px;
      top: 10px;
      width: 27px;
    }
    #burger-menu.close span:before {
      top: 0px;
      transform: rotate(90deg);
      width: 27px;
      background: #f9df90;
    }
    #burger-menu.close span {
      transform: rotate(-45deg);
      top: 13px;
      width: 27px;
      background: #f9df90;
    }
    #burger-menu.close span:after {
      top: 0px;
      left: 0;
      transform: rotate(90deg);
      opacity: 0;
      width: 0;
      background: #fff;
    }
    #menu {
      z-index: 1;
      min-width: 100%;
      min-height: 100%;
      position: fixed;
      top: 0;
      height: 0;
      visibility: hidden;
      opacity: 0;
      text-align: center;
      padding-top: 20px;
      transition: all 0.3s ease-in-out;
    }
    #menu.overlay {
      visibility: visible;
      opacity: 1;
      padding-top: 100px;
      background: rgb(209, 103, 61);
      background: linear-gradient(
        180deg,
        rgba(209, 103, 61, 1) 0%,
        rgba(227, 145, 80, 0.8491596467688638) 50%,
        rgba(217, 135, 99, 1) 100%
      );
    }
    #menu ul {
      padding: 0;
      display: flex;
      flex-direction: column;
    }
    #menu li {
      list-style: none;
      display: initial;
    }
    #menu a {
      color: #b34e17;

      font-size: 32px;
      min-width: 150px;
      margin-bottom: 30px;
      text-decoration: none;
    }
    a {
      background-color: #f9df90;
      border: none;

      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      padding: 0.5rem 1rem 0.5rem 1rem;
      color: #b34e17;
      border-radius: 25px;
    }

    a:hover {
      background-color: #fff0c1;
    }
  }
</style>

<script>
  const burgerMenu = document.querySelector("#burger-menu");
  const menu = document.querySelector("#menu");

  burgerMenu.addEventListener("click", function () {
    burgerMenu.classList.toggle("close");
    menu.classList.toggle("overlay");
  });
</script>
