<style>
  .grid_1-1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
  }

  .img1 {
    grid-row: 1/3;
    grid-column: 1/2;
    justify-content: center;
    align-items: center;
  }

  .img2 {
    grid-row: 2/4;
    grid-column: 2/3;
  }

  .img3 {
    grid-row: 1/4;
    grid-column: 3/4;
  }

  .img4 {
    grid-row: 2/4;
    grid-column: 4/4;
  }

  img {
    border-radius: 50%;
    width: 200px;
    height: 200px;
  }

  .biggerimage {
    border-radius: 50%;
    width: 400px;
    height: 400px;
  }

  .biggerimage2 {
    border-radius: 50%;
    width: 250px;
    height: 250px;
  }

  .biggerimage3 {
    border-radius: 50%;
    width: 300px;
    height: 300px;
  }

  h1 {
    text-align: center;
    color: #f9df90;
    padding-bottom: 7rem;
  }
  h2 {
    text-align: center;
    color: #fff8e1;
  }

  p {
    text-align: center;
    color: #fff0c1;
  }
  @media (max-width: 800px) {
    .grid_1-1-1-1 {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
      align-items: center;
    }
    .img1 {
      grid-row: 1;
      grid-column: 1;
      align-items: center;
    }

    .img2 {
      grid-row: 2;
      grid-column: 1;
      align-items: center;
    }
    .img3 {
      grid-row: 3;
      grid-column: 1;
      align-items: center;
    }
    .img4 {
      grid-row: 4;
      grid-column: 1;
      align-items: center;
    }

    .biggerimage {
      border-radius: 50%;
      width: 300px;
      height: 300px;
    }

    .biggerimage2 {
      border-radius: 50%;
      width: 300px;
      height: 300px;
    }

    .biggerimage3 {
      border-radius: 50%;
      width: 300px;
      height: 300px;
    }
  }
</style>
