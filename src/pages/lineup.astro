---
import "../styles/style.css";
import Layout from "../layouts/Layout.astro";
---

<Layout title="LINE-UP">
  <h2>Her er LINE-UP</h2>
  <div class="grid_1-1-1-1">
    <div class="img1">
      <img class="biggerimage2" src="/images/gallery1.webp" alt="artist" />
      <h2>Atwix twin</h2>
      <p class="txt_lineup">Let´s welcome an Irish-born British musician, composer and DJ.</p>
    </div>
    <div class="img2">
      <img class="biggerimage3" src="/images/gallery2.webp" alt="artist" />
      <h2>Atwix twin</h2>
      <p class="txt_lineup">Let´s welcome an Irish-born British musician, composer and DJ.</p>
    </div>
    <div class="img3">
      <img class="biggerimage2" src="/images/gallery3.webp" alt="artist" />
      <h2>Atwix twin</h2>
      <p class="txt_lineup">Let´s welcome an Irish-born British musician, composer and DJ.</p>
    </div>
    <div class="img4">
      <img class="biggerimage" src="/images/gallery4.webp" alt="artist" />
      <h2>Atwix twin</h2>
      <p class="txt_lineup">Let´s welcome an Irish-born British musician, composer and DJ.</p>
    </div>
  </div>
</Layout>

<style>
  .grid_1-1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 30px;
  }

  .img1 {
    grid-row: 1/3;
    grid-column: 1/2;
  }

  .img2 {
    grid-row: 2/4;
    grid-column: 2/3;
  }

  .img3 {
    grid-row: 3/5;
    grid-column: 3/4;
  }

  .img4 {
    grid-row: 1/3;
    grid-column: 4/5;
  }

  img {
    border-radius: 50%;
    width: 200px;
    height: 200px;
  }

  .biggerimage {
    border-radius: 50%;
    width: 350px;
    height: 350px;
  }

  .biggerimage2 {
    border-radius: 50%;
    width: 250px;
    height: 250px;
  }

  .biggerimage3 {
    border-radius: 50%;
    width: 290px;
    height: 290px;
  }
</style>
